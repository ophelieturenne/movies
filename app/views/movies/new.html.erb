<div class="container mt-5">
  <h1>Add New Movie</h1>

  <%= simple_form_for @movie do |f| %>
    <div class="form-group">
      <%= f.input :title, label: 'Title' %>
    </div>
    <div class="form-group">
      <%= f.input :release_date, as: :date, label: 'Release Date' %>
    </div>
    <div class="form-group">
      <%= f.input :director_id, collection: @directors, label_method: :name, label: 'Director' %>
    </div>
    <div class="form-group">
      <%= f.input :genre_id, collection: @genres, label_method: :name, label: 'Genre' %>
    </div>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back', movies_path, class: 'btn btn-secondary mt-3' %>
</div>
